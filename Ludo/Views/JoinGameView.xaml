<UserControl x:Class="Ludo.Views.JoinGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ludo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Back to Start " HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Command="{Binding NavigateStartScreenCommand}"/>

        <DataGrid Name="GamesListData" AutoGenerateColumns="False" Margin="180,15,45,52" ItemsSource="{Binding Path=GamesList}">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NameCol" Header="Game Name" IsReadOnly="true" Width="0.50*" Binding="{Binding Path=Game_Name}" />

                <DataGridTemplateColumn Header="Join Game" IsReadOnly="True" Width="0.25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="2">Join</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Delete Game" IsReadOnly="True" Width="0.25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Relative source is improtant since we are inside a datatemplate, which means we need redefine the datacontext 
                                By using relative source we look up tree untill we find datagrid.
                            The datagrids datacontext has our viewmodel whivh has the deletecommand -->
                            <Button Content="Delete" Command="{Binding DataContext.DeleteGameCommand,
                            RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                            CommandParameter="{Binding}" />  <!-- gives current dataitem as param-->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</UserControl>
