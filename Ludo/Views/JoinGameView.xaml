<UserControl x:Class="Ludo.Views.JoinGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ludo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Button Content="Back to Start " HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Command="{Binding NavigateStartScreenCommand}"/>

        <DataGrid Name="GamesListData" CanUserAddRows="False" AutoGenerateColumns="False" Margin="180,15,45,52" ItemsSource="{Binding Path=GamesList}">
            <!--Dont show list when Gameslist is empty -->
            



            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NameCol" Header="Game Name" IsReadOnly="true" Width="0.15*" Binding="{Binding Path=Game.Game_Name}" />

                <DataGridTemplateColumn Header="Chose player to join game as" IsReadOnly="True" Width="0.70*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Content="{Binding RedPlayer}" Background="Red" Foreground="White"
                        Grid.Column="0"
                        Command="{Binding DataContext.JoinRedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding Game}" />

                                <Button Content="{Binding BluePlayer}" Background="Blue" Foreground="White"
                        Grid.Column="1"
                        Command="{Binding DataContext.JoinBlueCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding Game}" />

                                <Button Content="{Binding GreenPlayer}" Background="Green" Foreground="White"
                        Grid.Column="2"
                        Command="{Binding DataContext.JoinGreenCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding Game}" />

                                <Button Content="{Binding YellowPlayer}" Background="Yellow"
                        Grid.Column="3"
                        Command="{Binding DataContext.JoinYellowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding Game}" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Delete Game" IsReadOnly="True" Width="0.15*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Relative source is improtant since we are inside a datatemplate, which means we need redefine the datacontext 
                                By using relative source we look up tree untill we find datagrid.
                            The datagrids datacontext has our viewmodel whivh has the deletecommand -->
                            <Button Content="Delete" Command="{Binding DataContext.DeleteGameCommand,
                            RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                            CommandParameter="{Binding Game}" />  <!-- gives current dataitem as param-->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
          
        </DataGrid>
<!-- Show msg when no games created-->
        <TextBlock Text="No games are created yet. Created games will be shown here." Margin="190,60,45,52" FontSize="16" Foreground="Black">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding GamesList.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</UserControl>
