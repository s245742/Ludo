<UserControl x:Class="Ludo.Views.StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ludo.Views"
             xmlns:viewmodels="clr-namespace:Ludo.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:GameViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button x:Name="btnCreateGame" Content="Create Game" RenderTransformOrigin="-0.834,1.914" Margin="524,174,36,174" Command="{Binding Path=SaveCommand}"/>

        <DataGrid Name="GamesListData" AutoGenerateColumns="False" Margin="0,0,363,0" ItemsSource="{Binding Path=GamesList}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="auto" Binding="{Binding Path=Name}" />
            </DataGrid.Columns>
        </DataGrid>  

    </Grid>
</UserControl>
