<Window x:Class="Ludo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ludo"
        xmlns:viewmodels="clr-namespace:Ludo.ViewModels"
        xmlns:views="clr-namespace:Ludo.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >

    <ContentControl Content="{Binding CurrentViewModel}" > <!-- now render but need mapping, we do  that with datatemplates -->
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:CreateGameViewModel}"> <!-- here gameviewmodel is mapped to startscreen view -->
                <views:CreateGameView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:StartScreenViewModel}">
                <views:StartScreenView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:JoinGameViewModel}">
                <views:JoinGameView/>
            </DataTemplate>
        </ContentControl.Resources>
        
    </ContentControl>


</Window>
